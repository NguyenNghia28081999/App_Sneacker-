<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="#FF9800"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView android:layout_width="wrap_content"
              android:layout_marginTop="10dp"
              android:layout_marginRight="10dp"
              android:layout_gravity="end"
              android:textSize="18sp"
              android:padding="8dp"
              android:textColor="@android:color/background_light"
              android:shadowColor="@android:color/background_light"
              android:id="@+id/txtdangxuat"
              android:layout_height="wrap_content"
              android:text="Đăng Xuất"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleview"
            android:src="@drawable/profile"
            android:layout_marginTop="50dp"
            android:layout_width="90dp" android:layout_height="90dp"
    android:layout_gravity="center"/>
        <androidx.cardview.widget.CardView
                android:id="@+id/c1"

                android:layout_marginTop="30dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout
                        android:padding="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Họ tên "
                    android:textSize="16sp"
                    android:textColor="@android:color/background_dark"
                    android:shadowColor="@android:color/background_dark"/>
                    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_weight="1"
                              android:paddingRight="10dp"
                              android:padding="5dp"
                              android:textSize="16sp"
                              android:textColor="@android:color/background_dark"
                              android:id="@+id/edithoten"
                              android:background="@android:color/transparent"
                              android:hint="Nhập họ tên"
                    android:gravity="end"/>

                </LinearLayout>
                <LinearLayout
                        android:padding="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="Địa chỉ"
                              android:textSize="16sp"
                              android:textColor="@android:color/background_dark"
                              android:shadowColor="@android:color/background_dark"/>
                    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:paddingRight="10dp"
                              android:padding="5dp"
                              android:textSize="16sp"
            android:id="@+id/editdiachi"
                              android:textColor="@android:color/background_dark"
                              android:background="@android:color/transparent"
                              android:hint="Nhập địa chỉ"
                              android:gravity="end"/>

                </LinearLayout>
                <LinearLayout
                        android:padding="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="Số điện thoại"
                              android:textSize="16sp"
                              android:textColor="@android:color/background_dark"
                              android:shadowColor="@android:color/background_dark"/>
                    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:paddingRight="10dp"
                              android:padding="5dp"
                              android:textSize="16sp"
                                 android:id="@+id/editsdt"
                              android:textColor="@android:color/background_dark"
                              android:background="@android:color/transparent"
                              android:hint="Nhập số điện thoại"
                              android:gravity="end"/>

                </LinearLayout>
                <LinearLayout
                        android:padding="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="Email"
                              android:textSize="16sp"
                              android:textColor="@android:color/background_dark"
                              android:shadowColor="@android:color/background_dark"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:paddingRight="10dp"
                              android:padding="5dp"
                              android:textSize="16sp"
                              android:id="@+id/txtemail"
                              android:textColor="@android:color/background_dark"
                              android:background="@android:color/transparent"
                              android:hint="Nhập số điện thoại"
                              android:gravity="end"/>

                </LinearLayout>
                <LinearLayout
                        android:padding="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="Mật khẩu"
                              android:textSize="16sp"
                              android:textColor="@android:color/background_dark"
                              android:shadowColor="@android:color/background_dark"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:paddingRight="10dp"
                              android:padding="5dp"
                              android:textSize="16sp"
                              android:id="@+id/txtmatkhau"
                              android:textColor="@android:color/background_dark"
                              android:background="@android:color/transparent"
                              android:hint="Nhập số điện thoại"
                              android:gravity="end"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:id="@+id/btncapnhat"
            android:text="Cập nhật"
            android:background="@drawable/custom_button_login"
    android:textColor="#F6F7FB"/>

</LinearLayout>