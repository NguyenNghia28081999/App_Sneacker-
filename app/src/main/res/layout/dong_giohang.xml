<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
      app:cardBackgroundColor="#FAF9F8"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"

        android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
                  android:padding="5dp"

                  android:orientation="vertical"
                  android:layout_height="match_parent">

        <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_width="110dp"
                       android:background="#CFCFC8"
                       android:layout_marginTop="5dp"
                       android:layout_gravity="center"
                       android:layout_height="130dp"
                       android:id="@+id/hinhanh"/>
            <LinearLayout
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textSize="12sp"
                          android:padding="7dp"
                          android:singleLine="true"

                          android:id="@+id/txtten"
                          android:text="Giày Sneaker"
                          android:textColor="#0A0A0B"
                />
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textSize="12sp"
                          android:padding="7dp"
                          android:maxLines="1"
                          android:singleLine="true"

                          android:id="@+id/txtgiatien"
                          android:text="Giá : 25000đ"
                          android:textColor="#F80759"
                />
               <LinearLayout
                       android:layout_marginTop="15dp"


                       android:orientation="horizontal"
                       android:layout_width="match_parent" android:layout_height="wrap_content">
                   <Button android:layout_width="40dp"
                           android:textSize="16sp"
                           android:textColor="@android:color/background_light"
                           android:shadowColor="@android:color/background_light"
                           android:id="@+id/btntru"
                       android:layout_weight="1"
                           android:background="@drawable/custom_button_login"
                           android:layout_height="40dp"
                   android:text="-"/>
                   <TextView android:layout_width="80dp" android:layout_height="40dp"
                   android:textColor="@android:color/background_dark"
                   android:textSize="16sp"
                       android:layout_weight="1"
                             android:id="@+id/txtsoluong"
                             android:layout_toRightOf="@+id/btntru"
                             android:gravity="center"
                             android:text="1000"
                             android:shadowColor="@android:color/background_dark"
                   android:textStyle="bold"/>
                   <Button android:layout_width="40dp"
                           android:textSize="16sp"
                       android:layout_weight="1"
                           android:layout_toRightOf="@+id/txtsoluong"
                           android:textColor="@android:color/background_light"
                           android:shadowColor="@android:color/background_light"
                           android:id="@+id/btnthem"
                           android:background="@drawable/custom_button_login"
                           android:layout_height="40dp"
                           android:text="+"/>
                   <ImageView android:layout_width="42dp"
                              android:src="@drawable/remove"
                              android:id="@+id/remove"
                       android:layout_weight="1"
                              android:layout_marginRight="8dp"
                              android:layout_alignParentRight="true"
                              android:layout_height="42dp"
                  />
               </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>